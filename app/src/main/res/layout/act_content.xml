<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="contentActNews"
            type="com.lionel.gonews.data.News" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="enterAlways|scroll" />

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/x8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/x8dp">

                <TextView
                    style="@style/NewsContentTitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:titleWithoutTail="@{contentActNews.title}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x8dp"
                    android:gravity="end"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/NewsContentFromAndDateText"
                        android:background="@drawable/round_corner_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/x8dp"
                        android:text="@{contentActNews.source.name}" />

                    <TextView
                        style="@style/NewsContentFromAndDateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{contentActNews.publishedAt}" />

                </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x16dp"
                    android:scaleType="center"
                    app:srcFromUrl="@{contentActNews.urlToImage}" />

                <TextView
                    style="@style/NewsContentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x16dp"
                    android:text="@{(contentActNews.content!=null) ? contentActNews.content : contentActNews.description}" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>