<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Toolbar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:contentInsetLeft">0dp</item>
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetRight">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>

    <style name="AnimDialog">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/anim_dialog_out</item>
    </style>

    <style name="SearchBoxText">
        <item name="android:textColor">@color/colorDeepGray</item>
        <item name="android:textSize">@dimen/x24sp</item>
    </style>

    <style name="SearchBoxHistoryText">
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">@dimen/x20sp</item>
    </style>

    <style name="ItemNewsTitleText">
        <item name="android:textColor">@color/colorDeepGray</item>
        <item name="android:textSize">@dimen/x16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsContentTitleText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsContentFromAndDateText">
        <item name="android:textSize">@dimen/x14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsContentText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/x18sp</item>
    </style>

    <style name="PopupWindowText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorDeepGray</item>
        <item name="android:textSize">@dimen/x18sp</item>
    </style>

</resources>
